{% assign page = site.pages.mobile-content %}
{% assign pages = page.pages %}
{
  "last_updated": "{{ site.date }}",
  "phone": "{{ page.meta.phone.value }}",
  "email": "{{ page.meta.email.value }}",
  "pages": [
    {% for page in pages %}
    {
      "title": "{{ page.title }}",
      "slug": "{{ page.slug }}",
      "body": {{ page.body | json }}
    }{% unless page == pages.last %},{% endunless %}
    {% endfor %}
  ]
}
